{
    "title": "古道长亭",
    "author": "古道长亭",
    "description": "welcome to my docs",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "styles": {
        "website": "./style/website.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "links": {
        "sidebar": {
            "回到博客": "https://blog.zhaojq.top"
        }
    },
    "plugins": [
        "github",
        "hide-element",
        "code",
        "tbfed-pagefooter",
        "donate",
        "-github-buttons",
        "sharing-plus",
        "anchors",
        "anchor-navigation-ex",
        "auto-scroll-table",
        "advanced-emoji",
        "chapter-fold",
        "expandable-chapters-small",
        "fontsettings",
        "popup",
        "splitter",
        "search-pro",
        "todo",
        "mermaid-gb3",

        "-pageview-count",
        "-search",
        "-toggle-chapters",
        "-page-toc-button",
        "-sharing",
        "-livereload",
        "-lunr",
        "-klipse"
    ],
    "pluginsConfig": {
        "github": {
            "url": "https://github.com/ixinglan"
        },
        "hide-element": {
            "elements": [".gitbook-link"]
        },
        "theme-default": {
            "showLevel": true
        },
        "code": {
            "copyButtons": true
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright © zhaojq 2019",
            "modify_label": "本书发布时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "donate": {
            "wechat": "/tbook/source/images/wechat.jpeg",
            "alipay": "/tbook/source/images/alipay.jpeg",
            "title": "感谢支持",
            "button": "\uD83D\uDE00",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
        },
        "github-buttons": {
            "buttons": [{
                "user": "ixinglan",
                "repo": "gitbook",
                "type": "star",
                "size": "small",
                "count": true
                }
            ]
        },
        "page-toc-button": {
            "maxTocDepth": 2,
            "minTocSize": 2
        },
        "sharing": {
            "douban": false,
            "facebook": false,
            "google": false,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": true,
            "qzone": true,
            "stumbleupon": false,
            "twitter": false,
            "viber": false,
            "vk": false,
            "weibo": true,
            "whatsapp": false,
            "all": [
                "weibo","qq", "qzone", "douban", "facebook","google",
							  "linkedin","twitter","whatsapp"
            ]
        },
        "anchor-navigation-ex": {
            "showLevel": false
        }
    }
}

{
    "title": "古道长亭",
    "author": "古道长亭",
    "description": "welcome to my docs",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "styles": {
        "website": "./style/website.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "links": {
        "sidebar": {
            "回到博客": "https://blog.zhaojq.top"
        }
    },
    "plugins": [
        "anchors",
        "anchor-navigation-ex",
        "auto-scroll-table",
        "advanced-emoji",       
        "code",
        "chapter-fold",
        "donate",
        "expandable-chapters-small",
        "favicon",
        "fontsettings",                        
        "github",
        "github-buttons",
        "insert-logo",
        "klipse",
        "livereload",
        "pageview-count",
        "page-toc-button",
        "popup",
        "sharing-plus",
        "-sharing",
        "splitter",
        "-search",
        "search-pro",
        "toggle-chapters",
        "tbfed-pagefooter",
        "todo"
    ],
    "pluginsConfig": {
        "github": {
            "url": "https://github.com/zhao-xiaoer"
        },
        "insert-logo": {
		        "url": "/source/images/logo.jpeg",
		        "style": "background: none; max-height: 60px; min-height: 40px;"
		    },
        "theme-default": {
            "showLevel": true
        },
        "code": {
            "copyButtons": true
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright © zhaojq 2019",
            "modify_label": "本书发布时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "donate": {
            "wechat": "/source/images/wechat.jpeg",
            "alipay": "/source/images/alipay.jpeg",
            "title": "",
            "button": "感谢支持",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
        },
        "github-buttons": {
            "buttons": [{
                "user": "zhao-xiaoer",
                "repo": "gitbook",
                "type": "star",
                "size": "small",
                "count": true
                }
            ]
        },
        "page-toc-button": {
            "maxTocDepth": 2,
            "minTocSize": 2
        },
        "sharing": {
            "douban": false,
            "facebook": false,
            "google": false,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": true,
            "qzone": true,
            "stumbleupon": false,
            "twitter": false,
            "viber": false,
            "vk": false,
            "weibo": true,
            "whatsapp": false,
            "all": [
                "weibo","qq", "qzone", "douban", "facebook","google",
							  "linkedin","twitter","whatsapp"
            ]
        },
        "anchor-navigation-ex": {
            "showLevel": false
        },
        "favicon":{
            "shortcut": "./source/images/favicon-32x32.webp",
            "bookmark": "./source/images/favicon-32x32.webp"
        }
    }
}
